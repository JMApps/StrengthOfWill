<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="600dp"
    android:orientation="vertical"
    tools:context=".presentation.ui.favorites.FragmentFavorites">

    <TextView
        android:id="@+id/tvFavoritesDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:drawableStart="@drawable/ic_star_favorites"
        android:drawablePadding="8dp"
        android:padding="16dp"
        android:text="@string/action_favorites"
        android:textColor="@color/White"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvIsFavoritesEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableStart="@drawable/ic_star_favorites_empty"
        android:drawablePadding="16dp"
        android:gravity="center"
        android:minHeight="500dp"
        android:padding="48dp"
        android:text="@string/action_favorite_list_empty"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListFavorites"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />
</LinearLayout>